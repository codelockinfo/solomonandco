<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/css/swiper.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js" defer="defer"></script>

<section class="image_section">
  <div class="width-container">
    <div class="celeb-container">
      <div class="heading_icons">
        <div class="slider_heading">{{section.settings.sectionhead}}</div>
        <div class="next-prev-icons">
          <div class="button-prev">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M15.293 3.293 6.586 12l8.707 8.707 1.414-1.414L9.414 12l7.293-7.293-1.414-1.414z"/></svg>
          </div>
          <div class="button-next">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M7.293 4.707 14.586 12l-7.293 7.293 1.414 1.414L17.414 12 8.707 3.293 7.293 4.707z"/></svg>
          </div>
        </div>
      </div>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% if block.settings.sectionhead != blank %}
            {% endif %}
            <div class="name_text">{{ block.settings.nametext }}</div>
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="" class="collection_img lazyload" loading="lazy">
            {% if block.settings.smallimg != blank %}
              <a href="{{block.settings.product.url }}">
              <div class="jewel_img_box">
                <img
                  src="{{ block.settings.smallimg | img_url: 'master' }}"
                  class="j_img lazyload"
                  alt=""
                  loading="lazy"
                >
              </div>
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      <div class="next-prev-btn">
        <div class="button-prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M15.293 3.293 6.586 12l8.707 8.707 1.414-1.414L9.414 12l7.293-7.293-1.414-1.414z"/></svg>
        </div>
        <div class="button-next">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M7.293 4.707 14.586 12l-7.293 7.293 1.414 1.414L17.414 12 8.707 3.293 7.293 4.707z"/></svg>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Golden_Image Slider",
  "class": "celebrity_section",
  "settings": [
    {
      "type": "text",
      "id": "sectionhead",
      "label": "Section heading"
    },
    {
      "type": "image_picker",
      "id": "backimg",
      "label": "Background image"
    }
  ],
  "blocks": [
    {
      "name": "block",
      "type": "text",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "smallimg",
          "type": "image_picker",
          "label": "Small img"
        },
        {
          "type": "richtext",
          "id": "nametext",
          "label": "Name text"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Add product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Golden_Image Slider"
    }
  ]
}
{% endschema %}

<style>
 .image_section{max-width:100%;padding:60px 0;background-color:#f6f5f3;background-image:url('{{ section.settings.backimg | img_url:'master' }}');background-size:auto;background-position:center right;background-repeat:no-repeat}.collection_image{width:100%;display:flex;flex-direction:column;height:132.48px;align-items:center;justify-content:center}.name_text{font-family:IBM Plex Sans;font-size:24px;font-weight:400;line-height:30px;letter-spacing:.05em;text-align:left;color:#000}.name_text p{margin-bottom:10px}.heading_icons{margin-bottom:20px;display:flex;justify-content:space-between;align-items:center}.heading_icons .slider_heading{font-family:Ivy Mode;font-size:64px;font-weight:600;line-height:94.95px;text-align:left;color:#0a1229}.jewel_img_box{width:120px;height:120px;border:4px solid #f6f5f3;border-radius:50%;overflow:hidden;position:absolute;top:85%;left:6vw}.collection_img,.swiper-container{width:100%;height:100%}.jewel_img_box .j_img{object-position:center center}.swiper-container{padding:80px 0 100px}.button-next,.button-prev{width:40px;height:40px;border:1px solid #000;margin:4px;text-align:center;color:#000;line-height:40px;font-size:18px}.next-prev-icons{display:flex;justify-content:end}.btn-next,.btn-prev{width:32px;border:1px solid #000;border-radius:100%;margin:4px;padding:5px}.next-prev-btn{display:flex;justify-content:center}@media (max-width:1440px){.swiper-container{padding:30px 0}}@media (max-width:1300px){.jewel_img_box{width:100px;height:100px;left:6.7vw}}@media (max-width:1024px){.heading_icons .slider_heading{font-size:64px}}@media (max-width:1100px){.jewel_img_box{width:90px;height:90px}}@media (max-width:991px){.jewel_img_box{left:10vw}}@media (min-width:769px){.next-prev-btn{display:none}.image_section{padding-bottom:100px}}@media (max-width:768px){.collection_logo{width:15%;margin-bottom:20px}.jewel_img_box{left:9vw}.heading_icons .slider_heading{font-size:64px}.next-prev-icons{display:none}.next-prev-btn{margin-top:13%}.name_text{text-align:center!important}}@media (max-width:576px){.jewel_img_box{left:13vw}.heading_icons .slider_heading{font-size:40px}}@media (max-width:679px){.next-prev-btn{margin-top:17%}}@media (max-width:500px){.jewel_img_box{left:31vw;top:90%}}@media (max-width:425px){.collection_logo{width:20%}.jewel_img_box{left:28vw;top:85%}.next-prev-btn{margin-top:20%}}

</style>

<script>
$(document).ready(function () {
  // Initialize Swiper for the main container
  new Swiper('.celeb-container', {
    loop: true,
    autoplay: {
      delay: 3000, // Adjust the delay (3000ms = 3 seconds)
      disableOnInteraction: true, // Optional: Keeps autoplay running even after user interaction
    },
    navigation: {
      nextEl: '.button-next',
      prevEl: '.button-prev',
    },
    slidesPerView: 4.2,
    spaceBetween: 15,
    breakpoints: {
      500: {
        slidesPerView: 1.2,
        spaceBetween: 15,
      },
      576: {
        slidesPerView: 2.2,
        spaceBetween: 15,
      },
      768: {
        slidesPerView: 3.2,
        spaceBetween: 15,
      },
      991: {
        slidesPerView: 3.2,
        spaceBetween: 15,
      },
      1028: {
        slidesPerView: 4.2,
        spaceBetween: 15,
      },
    },
  });
});
</script>
